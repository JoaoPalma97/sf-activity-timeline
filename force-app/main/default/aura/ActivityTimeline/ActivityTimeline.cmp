<aura:component controller="ActivityTimelineController" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <!-- Design Attributes -->
    <aura:attribute name="includeChildren" type="Boolean"/>

    <!-- Data Attributes -->
    <aura:attribute name="recordId" type="Id" />
	<aura:attribute name="record" type="Object" />
    <aura:attribute name="timelineGroups" type="ActivityTimelineGroup" description="List of Activity Timeline Items grouped by months"/>

    <!-- Other Attributes -->
    <aura:attribute name="activeSections" type="List" />
    <aura:attribute name="isLoading" type="boolean" default="false"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/>
    
    <force:recordData aura:id="sobjectRecord"
                      recordId="{!v.recordId}"
                      targetFields="{!v.record}"
                      layoutType="FULL"
                      />
    
    <!-- Loading Spinner-->
    <div class="exampleHolder">
        <aura:if isTrue="{! v.isLoading }">
            <lightning:spinner alternativeText="Loading" />
        </aura:if>
    </div>

    <!-- Task List -->
    <lightning:accordion allowMultipleSectionsOpen="true" activeSectionName="{!v.activeSections}">
        <aura:iteration items="{!v.timelineGroups}" var="activityGroup">
            <aura:if isTrue="{! !empty(activityGroup.items)}">
                <lightning:accordionSection name="{!activityGroup.sectionName}" label="{!activityGroup.name}">
                    <aura:set attribute="body">
                        <ul class="slds-timeline">
                            <aura:iteration items="{!activityGroup.items}" var="item">
                                <c:ActivityTimelineItem item="{!item}" />
                            </aura:iteration>
                        </ul>
                    </aura:set>
                </lightning:accordionSection>
            </aura:if>
        </aura:iteration>
    </lightning:accordion>    
</aura:component>